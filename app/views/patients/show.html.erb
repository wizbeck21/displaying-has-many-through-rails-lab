<h1> <%= @patient.name %></h1>

<h2>Appointments:</h2>

<% @patient.appointments.each do |appt|%>
  <% @patient_doctor = @patient.doctors.find(appt.doctor_id) %>
  <%= link_to @patient_doctor.name, doctor_path(@patient_doctor) %> - <%= link_to appt.appointment_datetime.strftime("%B %d, %Y at %k:%M"), appointment_path(appt) %> <br>
<% end %>